<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/cl_airlines"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60dp"
            android:gravity="center"
            android:padding="@dimen/_10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/airlines_and_stops"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sp"
                android:fontFamily="@font/poppins_semibold"/>

        </LinearLayout>

        <View
            android:visibility="invisible"
            android:id="@+id/view00"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            app:layout_constraintTop_toBottomOf="@id/ll_1"
            android:background="@color/grey_001"/>

        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view00">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Non Stop"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sp"
                android:fontFamily="@font/poppins_regular"/>

        </LinearLayout>
        <View
            android:id="@+id/view11"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            app:layout_constraintTop_toBottomOf="@id/ll_2"
            android:background="@color/grey_001"/>

        <LinearLayout
            android:id="@+id/ll_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view11">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="One Stop"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sp"
                android:fontFamily="@font/poppins_regular"/>

        </LinearLayout>

        <View
            android:id="@+id/view22"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            app:layout_constraintTop_toBottomOf="@id/ll_3"
            android:background="@color/grey_001"/>

        <LinearLayout
            android:id="@+id/ll_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view22">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Multi Stop"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sp"
                android:fontFamily="@font/poppins_regular"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>