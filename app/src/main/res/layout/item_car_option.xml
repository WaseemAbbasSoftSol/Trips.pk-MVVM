<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_0dp"
        app:rippleColor="@color/btn_color">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_car_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Altiz Honda"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp"
                android:paddingBottom="@dimen/_20px"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/view1"
                />


            <View
                android:id="@+id/view1"
                android:layout_width="@dimen/_1dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_car_option"
                app:layout_constraintBottom_toBottomOf="@id/tv_car_option"
                android:background="@color/grey_005" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>