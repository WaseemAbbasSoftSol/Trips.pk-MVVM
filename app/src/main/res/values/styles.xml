<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme.ContainedButton" parent="AppTheme.Button">
        <item name="android:background">@drawable/bg_rounded_btn</item>
        <item name="android:drawableTint" tools:ignore="NewApi">@color/btn_color</item>
    </style>

    <style name="AppTheme.UnontainedButton" parent="AppTheme.Button">
        <item name="android:background">@drawable/bg_rounded_btn_unfilled</item>
        <item name="android:drawableTint" tools:ignore="NewApi">@color/grey_002</item>
    </style>

    <!--    Button Styles-->
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_semibold</item>

    </style>

    <style name="DialogCustomTheme" parent="android:Theme.Holo.Dialog.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <!--- Range Progress Bar  -->
    <style name="Widget.App.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Slider</item>
        <item name="labelStyle">@style/Widget.App.Tooltip</item>
    </style>

    <style name="ThemeOverlay.App.Slider" parent="">
        <item name="colorPrimary">@color/btn_color</item>
        <item name="colorOnPrimary">#0000ffff</item>
        <item name="colorOnSurface">#0000ffff</item>
    </style>

    <style name="Widget.App.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="android:textAppearance">@style/TextAppearance.App.Tooltip</item>
        <item name="backgroundTint">@color/transparent</item>
    </style>

    <style name="TextAppearance.App.Tooltip" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textColor">@color/grey_002</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:theme">@style/EditTextHint</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/grey_006</item>
    </style>
    <style name="EditTextHint" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/grey_006</item>
        <item name="colorPrimaryDark">@color/grey_006</item>
        <item name="colorAccent">@color/grey_006</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>
    <style name="TextInputLayoutHintText">
        <item name="android:textColor">@color/grey_006</item>
        <item name="android:textSize">@dimen/_12sp</item></style>

    <style name="FieldStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:maxLines">1</item>
        <item name="theme">@style/EdittextUnderlinetheme</item>
    </style>

    <style name="EdittextUnderlinetheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/field_underline_color</item>
        <item name="colorControlActivated">@color/field_underline_color</item>
        <item name="colorControlHighlight">@color/field_underline_color</item>
    </style>

    <style name="MaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/btn_color</item>
    </style>
</resources>