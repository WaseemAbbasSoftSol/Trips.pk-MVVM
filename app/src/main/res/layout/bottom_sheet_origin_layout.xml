<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

        <com.github.captain_miao.optroundcardview.OptRoundCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:optRoundCardCornerRadius="25dp"
            app:optRoundCardLeftBottomCorner="false"
            app:optRoundCardRightBottomCorner="false"
            android:elevation="@dimen/opt_round_card_view_compat_inset_shadow"
            app:optRoundCardBackgroundColor="@color/white"
            android:id="@+id/bottom_sheet"
            app:behavior_peekHeight="55dp"
            app:behavior_hideable="true"
            app:layout_behavior="@string/bottom_sheet_behavior">


          <ScrollView
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="@dimen/_20dp"
                  android:layout_marginEnd="@dimen/_20dp"
                  android:paddingBottom="@dimen/_20dp">

                  <View
                      android:id="@+id/view"
                      android:background="@drawable/bg_bar_view"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:layout_marginTop="20dp"
                      app:layout_constraintTop_toTopOf="parent"
                      android:layout_width="66dp"
                      android:layout_height="6dp" />

                  <EditText
                      android:id="@+id/ed_search_origin"
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/_50dp"
                      app:layout_constraintTop_toBottomOf="@id/view"
                      android:layout_marginTop="@dimen/_10dp"
                      android:background="@drawable/bg_rounded_edittext"
                      android:hint="@string/lbl_search"
                      android:focusable="true"
                      android:textColorHint="@color/grey"
                      android:fontFamily="@font/poppins_regular"
                      android:textSize="14sp"
                      android:padding="@dimen/_10dp"
                      />

                  <androidx.recyclerview.widget.RecyclerView
                      android:id="@+id/rv_search_origin"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      tools:listitem="@layout/item_search_origin"
                      app:layout_constraintTop_toBottomOf="@id/ed_search_origin"/>


              </androidx.constraintlayout.widget.ConstraintLayout>

          </ScrollView>


        </com.github.captain_miao.optroundcardview.OptRoundCardView>



</layout>