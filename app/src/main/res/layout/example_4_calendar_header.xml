<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@drawable/bg_rounded_edittext"
        android:backgroundTint="@color/grey"
        android:paddingStart="16dp"
        android:paddingTop="10dp"
        >

        <TextView
            android:id="@+id/exFourHeaderText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sp"
            android:fontFamily="@font/poppins_medium"
            android:text="October 2019" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <CheckBox
                android:id="@+id/checkbox_flexible_search"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:button="@null"
                app:buttonCompat="@null"
                android:layout_marginStart="@dimen/_10dp"
                android:background="@drawable/radio_states"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flexible Search"
                android:layout_gravity="end"
                app:layout_constraintTop_toTopOf="@id/checkbox_flexible_search"
                app:layout_constraintBottom_toBottomOf="@id/checkbox_flexible_search"
                app:layout_constraintStart_toEndOf="@id/checkbox_flexible_search"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sp"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/_5dp"
                android:fontFamily="@font/poppins_regular"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>


</layout>